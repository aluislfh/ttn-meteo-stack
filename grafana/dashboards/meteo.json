{
  "uid": "ttn-meteo",
  "title": "TTN - Meteorología",
  "tags": ["ttn", "meteo"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "time": { "from": "now-6h", "to": "now" },
  "templating": {
    "list": [
      {
        "type": "query",
        "name": "device_meteo",
        "label": "Estación meteo",
        "datasource": { "type": "prometheus", "uid": "PROMETHEUS" },
        "refresh": 2,
        "query": {
          "query": "label_values(ttn_sensor_value{device_type=\"meteo\"}, device_id)",
          "refId": "var-device-meteo"
        },
        "multi": true,
        "includeAll": true,
        "allValue": ".*",
        "current": { "selected": true, "text": "All", "value": ".*" }
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "type": "timeseries",
      "title": "Temperatura (°C)",
      "datasource": { "type": "prometheus", "uid": "PROMETHEUS" },
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
      "targets": [
        {
          "refId": "A",
          "expr": "ttn_sensor_value{device_type=\"meteo\",field=\"temperature\",device_id=~\"$device_meteo\"}"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "celsius" }, "overrides": [] },
      "options": { "legend": { "showLegend": true, "displayMode": "list", "placement": "bottom" } }
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "Humedad (%)",
      "datasource": { "type": "prometheus", "uid": "PROMETHEUS" },
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
      "targets": [
        {
          "refId": "A",
          "expr": "ttn_sensor_value{device_type=\"meteo\",field=\"humidity\",device_id=~\"$device_meteo\"}"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "percent" }, "overrides": [] },
      "options": { "legend": { "showLegend": true, "displayMode": "list", "placement": "bottom" } }
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "Presión (hPa)",
      "datasource": { "type": "prometheus", "uid": "PROMETHEUS" },
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
      "targets": [
        {
          "refId": "A",
          "expr": "ttn_sensor_value{device_type=\"meteo\",field=\"pressure\",device_id=~\"$device_meteo\"}"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "pressurehpa" }, "overrides": [] },
      "options": { "legend": { "showLegend": true, "displayMode": "list", "placement": "bottom" } }
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "Viento - Velocidad",
      "datasource": { "type": "prometheus", "uid": "PROMETHEUS" },
      "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 },
      "targets": [
        {
          "refId": "A",
          "expr": "ttn_sensor_value{device_type=\"meteo\",field=\"wind_speed\",device_id=~\"$device_meteo\"}"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "mps" }, "overrides": [] },
      "options": { "legend": { "showLegend": true, "displayMode": "list", "placement": "bottom" } }
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "Viento - Dirección (°)",
      "datasource": { "type": "prometheus", "uid": "PROMETHEUS" },
      "gridPos": { "x": 0, "y": 16, "w": 12, "h": 8 },
      "targets": [
        {
          "refId": "A",
          "expr": "ttn_sensor_value{device_type=\"meteo\",field=\"wind_direction\",device_id=~\"$device_meteo\"}"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "degree" }, "overrides": [] },
      "options": { "legend": { "showLegend": true, "displayMode": "list", "placement": "bottom" } }
    },
    {
      "id": 6,
      "type": "timeseries",
      "title": "Lluvia acumulada",
      "datasource": { "type": "prometheus", "uid": "PROMETHEUS" },
      "gridPos": { "x": 12, "y": 16, "w": 12, "h": 8 },
      "targets": [
        {
          "refId": "A",
          "expr": "ttn_sensor_value{device_type=\"meteo\",field=\"rainfall_total\",device_id=~\"$device_meteo\"}"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "lengthmm" }, "overrides": [] },
      "options": { "legend": { "showLegend": true, "displayMode": "list", "placement": "bottom" } }
    },
    {
      "id": 7,
      "type": "stat",
      "title": "Batería (último valor)",
      "datasource": { "type": "prometheus", "uid": "PROMETHEUS" },
      "gridPos": { "x": 0, "y": 24, "w": 12, "h": 5 },
      "targets": [
        {
          "refId": "A",
          "expr": "last_over_time(ttn_sensor_value{device_type=\"meteo\",field=\"battery\",device_id=~\"$device_meteo\"}[30m])"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "percent" }, "overrides": [] },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false }, "orientation": "auto" }
    }
  ],
  "annotations": { "list": [] },
  "links": []
}

