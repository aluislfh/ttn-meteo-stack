{
  "uid": "ttn-hydro",
  "title": "TTN - Hidrología",
  "tags": ["ttn", "hydro"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "time": { "from": "now-24h", "to": "now" },
  "templating": {
    "list": [
      {
        "type": "query",
        "name": "device_hydro",
        "label": "Estación hidro",
        "datasource": { "type": "prometheus", "uid": "PROMETHEUS" },
        "refresh": 2,
        "query": {
          "query": "label_values(ttn_sensor_value{device_type=\"hydro\"}, device_id)",
          "refId": "var-device-hydro"
        },
        "multi": true,
        "includeAll": true,
        "allValue": ".*",
        "current": { "selected": true, "text": "All", "value": ".*" }
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "type": "timeseries",
      "title": "Distancia (sensor)",
      "datasource": { "type": "prometheus", "uid": "PROMETHEUS" },
      "gridPos": { "x": 0, "y": 0, "w": 24, "h": 10 },
      "targets": [
        {
          "refId": "A",
          "expr": "ttn_sensor_value{device_type=\"hydro\",field=\"distance\",device_id=~\"$device_hydro\"}"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "lengthmm" }, "overrides": [] },
      "options": { "legend": { "showLegend": true, "displayMode": "list", "placement": "bottom" } }
    },
    {
      "id": 2,
      "type": "stat",
      "title": "Distancia (último valor)",
      "datasource": { "type": "prometheus", "uid": "PROMETHEUS" },
      "gridPos": { "x": 0, "y": 10, "w": 12, "h": 6 },
      "targets": [
        {
          "refId": "A",
          "expr": "last_over_time(ttn_sensor_value{device_type=\"hydro\",field=\"distance\",device_id=~\"$device_hydro\"}[30m])"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "lengthmm" }, "overrides": [] },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false }, "orientation": "auto" }
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "Variación (derivada) de distancia",
      "datasource": { "type": "prometheus", "uid": "PROMETHEUS" },
      "gridPos": { "x": 12, "y": 10, "w": 12, "h": 6 },
      "targets": [
        {
          "refId": "A",
          "expr": "deriv(ttn_sensor_value{device_type=\"hydro\",field=\"distance\",device_id=~\"$device_hydro\"}[30m])"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "lengthmm" }, "overrides": [] },
      "options": { "legend": { "showLegend": true, "displayMode": "list", "placement": "bottom" } }
    }
  ],
  "annotations": { "list": [] },
  "links": []
}

